# Flanneld configuration options  

# etcd url location.  Point this to the server where etcd runs
FLANNEL_ETCD="-etcd-endpoints=http://{{ hostvars[groups['etcd'][0]][ansible_routing_network_interface]['ipv4']['address'] }}:4001"

# etcd config key prefix for the configuration key that flannel queries
# For address range assignment
FLANNEL_ETCD_PREFIX="-etcd-prefix=/coreos.com/network"

# Any additional options that you want to pass
FLANNEL_OPTIONS="-iface={{ routing_network_interface }} -subnet-file=/var/run/flannel/subnet.env -v=0"


